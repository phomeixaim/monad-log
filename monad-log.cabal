                    ,   bytestring >= 0.10 && < 0.11
                    ,   text >= 1.2 && < 1.3
                    ,   text-show >= 3.0 && < 4.0
                    ,   transformers >= 0.5 && < 0.6
                    ,   aeson >= 1.0 && < 2.0
                    ,   template-haskell >= 2.11 && < 3
                    ,   transformers-base >= 0.4 && < 0.5
                    ,   mtl >= 2.2 && < 2.3

  -- hs-source-dirs:      
  default-language:    Haskell2010

